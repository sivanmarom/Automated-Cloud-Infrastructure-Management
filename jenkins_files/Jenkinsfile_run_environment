pipeline {
    agent {
        label 'main_agent'
    }
    stages {
        stage('Launch EC2 Instances') {
            agent {
                label 'ec2'
            }
            steps {
                 dir('project3/modules/ec2-module') {
                sh 'terraform init'
                sh 'terraform apply --auto-approve'
                }
            }
        }
