pipeline {
    agent {
        label 'main_agent'
    }
     environment {
        GITHUB_TOKEN = credentials('github_token')
        INSTANCE_IDS =""
    }

    stages {
 stage('Launch EC2 Instances') {
      agent {
        label 'ec2'
      }
      steps {
        dir('modules/ec2-module') {
        script {
                sh 'terraform init'
                sh 'terraform apply --auto-approve'
                stash name: 'instanceIds', includes: 'terraform.tfstate*'
                }
        }
        }
      }
    }

