        // }
            stage('Create Production Load-Balancer') {
            agent {
                label 'load_balancer'
            }
            steps {
                dir('modules/load-balancer-module'){
                 script {
                def instanceIds = env.INSTANCE_IDS ?: ""
                sh "terraform init"
               sh "terraform apply --auto-approve -var=\"instance_ids=${env.INSTANCE_IDS}\""

            }
                }
            }
        }
    }
}
