            }
        }
        stage('Create IAM User') {
            agent {
                label 'iam'
            }
            steps {
                sh 'terraform init'
                sh 'terraform apply -target=module.iam --auto-approve'
            }
        }
        stage('Create DynamoDB Table') {
            agent {
                label 'dynamodb'
            }
            steps {
                sh 'terraform init'
