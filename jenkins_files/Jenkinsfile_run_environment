pipeline {
    agent {
        label 'main_agent'
    }
     environment {
        GITHUB_TOKEN = credentials('github_token')
        INSTANCE_IDS = ""
    }
    stages {
        stage('Launch EC2 Instances') {
            agent {
                label 'ec2'
            }
            steps {
                 dir('modules/ec2-module') {
                sh 'terraform init'
                sh 'terraform apply --auto-approve'
                }
            }
        }
        stage('Capture Instance IDs') {
    steps {
        script {
            def consoleOutput = sh(returnStdout: true, script: 'terraform apply --auto-approve').trim()
            def instanceIds = consoleOutput =~ /"i-\w+"/
            env.INSTANCE_IDS = instanceIds.collect { it.replaceAll(/"/, '') }.join(',')
        }
    }
}
