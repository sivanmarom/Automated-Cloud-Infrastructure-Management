    stage('Create Production Load-Balancer') {
    agent {
        label 'load_balancer'
    }
    steps {
        dir('modules/load-balancer-module') {
            script {
                unstash 'instanceIds'
                env.INSTANCE_IDS = sh(script: 'terraform output -raw instance_ids', returnStdout: true).trim()
                echo "INSTANCE_IDS: ${env.INSTANCE_IDS}"
               
            }
        }
