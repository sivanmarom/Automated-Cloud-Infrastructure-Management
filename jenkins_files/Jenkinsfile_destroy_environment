pipeline {
    agent {
        label 'main_agent'
    }
    stages {
        stage('Destroy EC2 Instances') {
            agent {
                label 'ec2'
            }
            steps {
                dir('/home/ubuntu/workspace/Terraform-Environment/modules/ec2-module') {
                    sh 'terraform init'
                    sh 'terraform destroy --auto-approve'
                }
            }
        }
        stage('Destroy S3 Bucket') {
