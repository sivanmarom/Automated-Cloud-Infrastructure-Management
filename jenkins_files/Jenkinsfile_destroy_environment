pipeline {
    agent {
        label 'main_agent'
    }
    stages {
        stage('Destroy EC2 Instances') {
            agent {
                label 'ec2'
            }
            steps {
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'
                    sh 'terraform destroy -target=module.ec2 --auto-approve'
                }
            }
        }
        stage('Destroy S3 Bucket') {
            agent {
                label 's3'
            }
            steps {   
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'
                    sh 'terraform destroy -target=module.s3 --auto-approve'
                }
            }
        }
        stage('Destroy IAM User') {
            agent {
                label 'iam'
            }
            steps {
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'
                    sh 'terraform destroy -target=module.iam --auto-approve'
                }
            }
        }
        stage('Destroy DynamoDB Table') {
            agent {
                label 'dynamodb'
            }
            steps {      
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'         
                    sh 'terraform destroy -target=module.dynamodb --auto-approve'
                }
            }
        }
        stage('Destroy Github resource') {
            agent {
                label 'github'
            }
            steps {
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'
                    sh 'terraform apply -target=module.github --auto-approve'
                }
            }
        }
        stage('Destroy Cloud-Watch Alarm') {
            agent {
                label 'cloud-watch'
            }
            steps {
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'
                    sh 'terraform apply -target=module.cloud-watch --auto-approve'
                }
            }
        }
        stage('Destroy Load-Balancer') {
            agent {
                label 'load-balancer'
            }
            steps {
                dir('/home/ubuntu/workspace/Terraform-Environment') {
                    sh 'terraform init'
                    sh 'terraform apply -target=module.load-balancer --auto-approve'
                }
            }
        }
    }
}
